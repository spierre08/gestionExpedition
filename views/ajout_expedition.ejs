<!DOCTYPE html>
<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Pannel d'administration</title>
      <link rel="stylesheet" href="/css/style.css">
</head>
<body>
      <section>
            <div class="sliderBar">
                  <div class="slider-title">
                        <h1>GExpédition</h1>
                        <span><%= email %></span>
                  </div>
                  <hr>
                  <div class="sliderElement">
                        <ul>
                              <li><a href="/interface">Clients</a></li>
                                <li><a href="/interface/commande" >Commandes</a></li>
                                <li><a href="/interface/expedition" class="active">Expéditions</a></li>
                                <li><a href="#">Transporteur</a></li>
                        </ul>
                  </div>
            </div>
      </section>
      
      <section>
            <div class="main">
                  <header>
                        <div class="menu-element">
                              <div class="menu"></div>
                              <div class="menu1"></div>
                        </div>
                        <div class="btn-group">
                              <a href="/deconnexion">Déconnexion</a>
                        </div>
                  </header>
                  <div class="main-container">
                        <div class="main-table">
                              <form class="form" action="/interface/expedition/ajout" method="POST">
                                    <h3>Nouvelle expédition</h3>
                                    <label for="">Référence commande</label>
                                    <select name="commande_id" id="">
                                          <% for(let i=0; i<row1.length ; i++){ %>
                                          <option value="<%= row1[i].id %>"><%= row1[i].reference_commande %></option>
                                          <% } %>
                                    </select>
                                    <label for="">Transporteur</label>
                                    <select name="transporteur_id" id="">
                                          <% for(let i=0; i<row2.length ; i++){ %>
                                          <option value="<%= row2[i].id %>"><%= row2[i].nom %></option>
                                          <% } %>
                                    </select>
                                    <label for="">Staut de commande</label>
                                    <select name="statut" id="">
                                          <option value="En transit">En transit</option>
                                          <option value="Livré">Livré</option>
                                          <option value="Non livré">Non livré</option>
                                    </select>
                                    <label for="">Date d'expédition</label>
                                    <input type="date" name="date_expedition" id="" placeholder="Date de livraison" required>
                                    <input type="submit" value="Ajouter">
                              </form>
                        </div>
                  </div>
                
            </div>
      </section>

      <script src="/js/script.js"></script>
</body>
</html>