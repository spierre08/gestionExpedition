<!DOCTYPE html>
<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Pannel d'administration</title>
      <link rel="stylesheet" href="/css/style.css">
</head>
<body>
      <section>
            <div class="sliderBar">
                  <div class="slider-title">
                        <h1>GExpédition</h1>
                        <span><%= email %></span>
                  </div>
                  <hr>
                  <div class="sliderElement">
                        <ul>
                              <li><a href="/dashbord">Tableau de bord</a></li>
                              <li><a href="/client">Clients</a></li>
                              <li><a href="/commande">Commandes</a></li>
                              <li><a href="/expedition">Expéditions</a></li>
                              <li><a href="/transporteur" class="active">Transporteur</a></li>
                              <li><a href="#">Analyses</a></li>
                              <li><a href="/rapport">Rapports</a></li>
                              <li><a href="/utilisateur">Utilisateurs</a></li>
                        </ul>
                  </div>
            </div>
      </section>
      
      <section>
            <div class="main">
                  <header>
                        <div class="menu-element">
                              <div class="menu"></div>
                              <div class="menu1"></div>
                        </div>
                        <div class="btn-group">
                              <a href="/deconnexion">Déconnexion</a>
                        </div>
                  </header>
                  <div class="main-container">
                        <div class="main-container-element">
                              <div class="main-container-print">
                                    <a href="/transporteur/recherche">Rechercher</a>
                              </div>
                              <div class="main-container-element-btnAdd">
                                    <a href="/transporteur/ajout">Ajouter</a>
                              </div>
                        </div>
                        <div class="main-table">
                              <div class="main-table-responsive">
                                    <table>
                                          <thead>
                                                <tr>
                                                      <th>Nom</th>
                                                      <th>Adresse</th>
                                                      <th>Téléphone</th>
                                                      <th>Action</th>
                                                </tr>
                                          </thead>
                                          <% if (row.length > 0){ %>
                                          <tbody>
                                                <% for(let i=0; i<row.length; i++){ %>
                                                <tr>
                                                      <td><%= row[i].nom %></td>
                                                      <td><%= row[i].adresse %></td>
                                                      <td><%= row[i].telephone %></td>
                                                      <td>
                                                            <a href="/transporteur/editer/<%= row[i].id %>" >Editer</a>
                                                            <a href="/transporteur/supprimer/<%= row[i].id %>">Supprimer</a>
                                                      </td>
                                                </tr>
                                                <% } %>
                                          </tbody>
                                          <% }else{ %>
                                                <p>Aucun résultat</p>
                                          <% } %>
                                    </table>
                              </div>
                        </div>
                  </div>
            </div>
      </section>

      <script src="/js/script.js"></script>
</body>
</html>