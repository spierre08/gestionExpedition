<%- include("./headers/headerClient.ejs") %>
<section>
      <div class="sliderBar">
            <div class="slider-title">
                  <h1>GExpédition</h1>
                  <span><%= email %></span>
            </div>
            <hr>
            <div class="sliderElement">
                  <ul>
                        <li><a href="/dashbord">Tableau de bord</a></li>
                        <li><a href="/client" class="active">Clients</a></li>
                        <li><a href="/commande">Commandes</a></li>
                        <li><a href="/expedition">Expéditions</a></li>
                        <li><a href="/transporteur">Transporteur</a></li>  
                        <li><a href="#">Analyses</a></li>
                        <li><a href="/rapport">Rapports</a></li>
                        <li><a href="/utilisateur">Utilisateurs</a></li>
                  </ul>
            </div>
      </div>
</section>

<section>
      <div class="main">
            <header>
                  <div class="menu-element">
                        <div class="menu"></div>
                        <div class="menu1"></div>
                  </div>
                  <div class="btn-group">
                        <a href="/deconnexion">Déconnexion</a>
                  </div>
            </header>
            <div class="main-container">
                  <div class="main-container-element">
                        <div class="main-container-print">
                              <a href="/client/recherche">Rechercher</a>
                        </div>
                  </div>
                  <div class="main-table">
                        <div class="main-table-responsive">
                              <table>
                                    <thead>
                                          <tr>
                                                <th>Nom</th>
                                                <th>Adresse</th>
                                                <th>Téléphone</th>
                                                <th>Email</th>
                                                <th>Action</th>
                                          </tr>
                                    </thead>
                                    <% if (row.length > 0){ %>
                                    <tbody>
                                          <% for(let i=0; i<row.length; i++){ %>
                                          <tr>
                                                <td><%= row[i].nom %></td>
                                                <td><%= row[i].adresse %></td>
                                                <td><%= row[i].telephone %></td>
                                                <td style="font-style: italic;"><%= row[i].email %></td>
                                                <td>
                                                      <a href="/client/editer/<%= row[i].id %>" >Editer</a>
                                                      <a href="/client/suppression/<%= row[i].id %>">Supprimer</a>
                                                </td>
                                          </tr>
                                          <% } %>
                                    </tbody>
                                    <% }else{ %>
                                          <p>Aucun résultat</p>
                                    <% } %>
                              </table>
                        </div>
                  </div>
            </div>
      </div>
</section>

<%- include("./footers/footerClient.ejs") %>